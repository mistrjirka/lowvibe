{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist/main",
        "rootDir": "src/main",
        "declaration": true,
        "resolveJsonModule": true,
        "composite": true
    },
    "include": [
        "src/main/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}